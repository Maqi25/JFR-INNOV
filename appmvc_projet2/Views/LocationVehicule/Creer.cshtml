@model appmvc_projet2.ViewModels.ServiceViewModel

@{
    Layout = "Layout";
}

<!-- Home Section-->
<section class="page-section portfolio mt-5">

        <div class="container">
		        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Créer Service Transport de Personnes</h2>
		        <!-- Icon Divider-->
		        <div class="divider-custom">
			        <div class="divider-custom-line"></div>
			        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
			        <div class="divider-custom-line"></div>
		        </div>
		        <div class="row justify-content-center">
                    <div class="col-lg-8 col-xl-7">

                        

			             @using (Html.BeginForm())
                         {  
                             @Html.Partial("ServiceView", Model);

                             
                           <div class="row">
                                  <div class="col">
                                             <div class="form-floating mb-3">
                                                 @Html.TextBoxFor(m => m.LocationDeVehicule.ModeleVehicule, new { @class = "form-control", placeholder = "Modéle véhicule" })
                                                 @Html.LabelFor(m => Model.LocationDeVehicule.ModeleVehicule)
                                            </div>
                                  </div>

                                  <div class="col">
                                             <div class="form-floating mb-3">
                                                 @Html.TextBoxFor(m => Model.LocationDeVehicule.TypeBoiteVitesse, new { @class = "form-control", placeholder = "Type boite de vitesse" })
                                                 @Html.LabelFor(m => m.LocationDeVehicule.TypeBoiteVitesse)
                                            </div>
                                  </div>
                           </div>

                             <div class="row">
                                   <div class="col">
                                    <div class="form-floating mb-3">
                                        @Html.TextBoxFor(m => Model.LocationDeVehicule.Motorisation, new { @class = "form-control", placeholder = "Motorisation" })
                                        @Html.LabelFor(m => Model.LocationDeVehicule.Motorisation)
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-floating mb-3">
                                        @Html.TextBoxFor(m => Model.LocationDeVehicule.Kilometrage, new { @class = "form-control", placeholder = "Kilométrage" })
                                        @Html.LabelFor(m => Model.LocationDeVehicule.Kilometrage)
                                    </div>
                                </div>

                           </div>

                              <div class="row">
                                   <div class="col">
                                    <div class="form-floating mb-3">
                                        @Html.TextBoxFor(m => Model.LocationDeVehicule.DateMiseEnService, "{0:yyyy-MM-dd}", 
                                        new { @type = "date", @class = "form-control", placeholder = "Date de mise en service" })
                                        @Html.LabelFor(m => Model.LocationDeVehicule.DateMiseEnService)
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-floating mb-3">
                                        @Html.TextBoxFor(m => Model.LocationDeVehicule.NombrePlace, new { @class = "form-control", placeholder = "Nombre de places" })
                                        @Html.LabelFor(m => Model.LocationDeVehicule.NombrePlace)
                                    </div>
                                </div>

                           </div>

                            <button class="btn btn-primary btn-xl" type="submit">Créer</button>

                         }

                    </div>

		        </div>
       </div>
 </section>


