
@model appmvc_projet2.ViewModels.ServiceViewModel
@*@model appmvc_projet2.Models.Services.TransportColis.TransportDeColis*@
@{
	Layout = "Layout";
}

 <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Sejours</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                @using (Html.BeginForm("Modifier", "TransportColis", FormMethod.Post, new { enctype = "multipart/form-data" }))
                @*@using (Html.BeginForm())*@
                {
                    //Appel de la vue partiel ServiceView comportant les attributs de la classe Service
                    @Html.Partial("ServiceView", Model);

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.TransportDeColis.NomDuColis, new { @class = "form-control", placeholder = "Nom du colis" })
                        @Html.LabelFor(model => model.TransportDeColis.NomDuColis)
                        @Html.ValidationMessageFor(model => model.TransportDeColis.NomDuColis)
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.TransportDeColis.Nature, new { @class = "form-control", placeholder = "Nature du colis" })
                        @Html.LabelFor(model => model.TransportDeColis.Nature)
                        @Html.ValidationMessageFor(model => model.TransportDeColis.Nature)
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.TransportDeColis.Volume, new { @class = "form-control", placeholder = "Volume" })
                        @Html.LabelFor(model => model.TransportDeColis.Volume)
                        @Html.ValidationMessageFor(model => model.TransportDeColis.Volume)
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextAreaFor(model => model.TransportDeColis.Format, new { @style = "height:200px", @class = "form-control", placeholder = "Format" })
                        @Html.LabelFor(model => model.TransportDeColis.Format)
                        @Html.ValidationMessageFor(model => model.TransportDeColis.Format)
                    </div>

                    //Ajout des fonctions cachées afin de pouvoir récupérer les clés primaires et étrangères des tables à modifier
                     @Html.HiddenFor(model=>model.TransportDeColis.Id)
                     @Html.HiddenFor(model=>model.TransportDeColis.ServiceId)
                     @Html.HiddenFor(model=>model.Service.Id)
                    
                    @Html.HiddenFor(model=>model.TransportDeColis.ImagePath)
                    <div class="d-flex flex-row my-3">
                        <div class="mb-3 d-flex">
                            <div>
                                @Html.LabelFor(model => model.TransportDeColis.Image, new { id = "imageLabel", @style = "text-align:center;" })
                                @Html.TextBoxFor(model => model.TransportDeColis.Image, new { placeholder = "Image", @type = "file" })

                            </div>
                        </div>
                        <div class="text-center">
                            <img src="@Model.TransportDeColis.ImagePath" height="400" width="400" />
                        </div>
                    </div>

                    <!-- Submit Button-->
                    <button class="btn btn-primary btn-xl" type="submit">Modifier</button>
                }
            </div>
        </div>

