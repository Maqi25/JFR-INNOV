<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/Site.css" rel="stylesheet" />
     <!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

	<!-- jQuery library -->
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

	<!-- Popper JS -->
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

	<!-- Latest compiled JavaScript -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <div id="entete">
        <h1>Bienvenue sur le site JeVeuxDepanner</h1>
    </div>

    <div id="main">
        <div id="menu">
             <ul>
                <li class="selectionne">@Html.ActionLink("Accueil", "Index")</li>
                <li>@Html.ActionLink("Liste des personnes", "ListePersonnes", "Personne")</li>
                <li>@Html.ActionLink("Modifier", "ModifierPersonne", "Personne")</li>
                <li>@Html.ActionLink("Créer", "CreerPersonne", "Personne")</li>
                <li>@Html.ActionLink("Supprimer", "SupprimerPersonne", "Personne")</li>
            </ul>
        </div>

        <div id="contenu">
            @RenderBody()
        </div>
    </div>

    <div id="footer">
        &copy; @DateTime.Now.Year 
    </div>
</body>
</html>